<div id="<%= dom_id driver %>" class="block md:px-4 lg:px-8">
  <p class="my-5">
    <strong class="block font-medium mb-1">Modelo:</strong>
    <%= driver.model %>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Driver:</strong>
    <%= driver.link %>
  </p>
  <% if action_name != "show" %>
    <div class="flex items-stretch w-full rounded-md shadow-sm text-center" role="group">
      <%= link_to driver, type: "button", class: "flex w-1/3 items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-l-md bg-yellow-400 hover:bg-yellow-500 focus:z-10 focus:ring-2 focus:ring-yellow-300 dark:focus:ring-yellow-900" do %>
        <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
        <p>Ver</p>
      <% end %>
      <%= link_to edit_driver_path(driver), type: "button", class: "flex w-1/3 items-center justify-center py-2 px-4 text-white text-sm font-medium bg-blue-700 hover:bg-blue-800 focus:z-10 focus:ring-2 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900" do %>
        <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
        <p>Editar</p>
      <% end %>
      <%= link_to driver_path(driver), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, type: "button", class: "flex w-1/3 items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-r-md bg-red-700 hover:bg-red-800 focus:z-10 focus:ring-2 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" do %>
        <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        <p>Eliminar</p>
      <% end %>
    </div>
    <hr class="mt-6">
  <% end %>
</div>
