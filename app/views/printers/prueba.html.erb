<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
<h1 class="text-center sm:text-left font-bold text-4xl mb-4 md:px-4 lg:px-8">Impresoras</h1>
<div class="grid md:grid-cols-2 md:px-4 lg:px-8">
  <%= link_to new_printer_path, class: "rounded-t-md md:rounded-r-none md:rounded-l-md flex-1 flex md:mx-0 md:my-2 items-center justify-center text-center sm:text-left py-3 px-5 bg-blue-600 text-white block font-medium" do %>
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path></svg>
    <p>Agregar una nueva prueba</p>
  <% end %>
  <div class="md:mx-0 md:my-2">
    <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-gray-300">Search</label>
    <div class="relative">
      <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
        <svg aria-hidden="true" class="w-5 h-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
      </div>
      <input type="search" id="search" class="block p-4 pl-10 w-full text-sm text-gray-900 bg-gray-50 rounded-b-md md:rounded-l-none md:rounded-r-md border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Buscar" required="" data-search>
    </div>
  </div>
</div>
<div class="grid md:grid-cols-2">
    <% if action_name != "show" %>
    <div class="block md:px-4 lg:px-8" data-printer-card>
    <% else %>
    <div>
    <% end %>
    <div class="my-4">
        <h1 class="text-center sm:text-left font-bold text-2xl" data-printer-name>nombre</h1>
    </div>
    <div class="grid grid-cols-2 my-4">
        <div>
        <p class="block text-xl font-medium font-bold mb-1">Modelo:</p>
        <p data-printer-model>modelo</p>
        </div>
        <div>
        <p class="block text-xl font-medium font-bold mb-1">Serial:</p>
        <p data-printer-serial>serial</p>
        </div>
    </div>
    <div class="grid grid-cols-2 mt-5">
        <p class="block text-xl font-medium font-bold mb-1">Direcci√≥n IP:</p>
        <p class="block text-xl font-medium font-bold mb-1">Controlador:</p>
    </div>
    <div class="flex items-stretch w-full rounded-md shadow-sm text-center mb-5" role="group">
        <a href="#" target="_blank" class="flex w-1/2 items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-l-md bg-purple-400 hover:bg-purple-500 focus:z-10 focus:ring-2 focus:ring-purple-300 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900"> 
        <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>
        <p>ip</p>
        </a>
        <a href="#" target="_blank" class="flex w-1/2 items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-r-md bg-green-700 hover:bg-green-800 focus:z-10 focus:ring-2 focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-900"> 
        <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path></svg>
        <p>Descargar</p>
        </a>
    </div>
    <% if action_name != "show" %>
        <div class="flex items-stretch w-full rounded-md shadow-sm text-center" role="group">
        <%= link_to printer, type: "button", class: "flex w-1/3 items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-l-md bg-yellow-400 hover:bg-yellow-500 focus:z-10 focus:ring-2 focus:ring-yellow-300 dark:focus:ring-yellow-900" do %>
            <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>  
            <p>Ver</p>
        <% end %>
        <%= link_to edit_printer_path(printer), type: "button", class: "flex w-1/3 items-center justify-center py-2 px-4 text-white text-sm font-medium bg-blue-700 hover:bg-blue-800 focus:z-10 focus:ring-2 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900" do %>
            <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
            <p>Editar</p>
        <% end %>
        <%= link_to printer_path(printer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, type: "button", class: "flex w-1/3 items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-r-md bg-red-700 hover:bg-red-800 focus:z-10 focus:ring-2 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" do %>
            <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
            <p>Eliminar</p>
        <% end %>
        </div>
        <hr class="mt-6">
    <% end %>
    </div>
</div>

    