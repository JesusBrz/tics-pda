<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <h1 class="font-bold text-4xl mb-4 md:px-4 lg:px-8">Impresoras</h1>
  </div>
</div>
<div class="md:px-4 lg:px-8">
  <%= link_to 'Agregar una nueva impresora', new_printer_path, class: "text-center rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
</div>
<div class="grid md:grid-cols-2">
  <%= render @printers %>
</div>
