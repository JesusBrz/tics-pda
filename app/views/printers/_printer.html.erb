<div id="<%= dom_id printer %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nombre:</strong>
    <%= printer.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Modelo:</strong>
    <%= printer.model %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Serial:</strong>
    <%= printer.serial %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">IP:</strong>
    <a href="http://<%= printer.ip %>" target="_blank">Portal</a>
    
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Controlador:</strong>
    <a href="<%= printer.driver %>" target="_blank">Descargar</a>
  </p>

  <% if action_name != "show" %>
    <div class="flex items-stretch w-full rounded-md shadow-sm text-center" role="group">
      <%= link_to printer, type: "button", class: "flex-1 flex items-center py-2 px-4 text-white text-sm font-medium rounded-l-md bg-yellow-400 hover:bg-yellow-500 focus:z-10 focus:ring-2 focus:ring-yellow-300 dark:bg-yellow-600 dark:hover:bg-yellow-700 dark:focus:ring-yellow-900" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>  
      <% end %>
      <%= link_to edit_printer_path(printer), type: "button", class: "flex-1 flex items-center py-2 px-4 text-white text-sm font-medium bg-green-700 hover:bg-green-800 focus:z-10 focus:ring-2 focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-900" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
      <% end %>
      <%= link_to printer_path(printer), method: :delete, type: "button", class: "flex-1 flex items-center py-2 px-4 text-white text-sm font-medium rounded-r-md bg-red-700 hover:bg-red-800 focus:z-10 focus:ring-2 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
      <% end %>
    </div>
    <hr class="mt-6">
  <% end %>
</div>


<div>
  <div class="py-4 flex-1 flex items-center justify-center shadow-lg rounded-lg bg-cyan-500">01</div>
  <div class="py-12 flex-1 flex items-center justify-center shadow-lg rounded-lg bg-cyan-500">02</div>
  <div class="py-8 flex-1 flex items-center justify-center shadow-lg rounded-lg bg-cyan-500">03</div>
</div>