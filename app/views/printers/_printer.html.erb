<% if action_name != "show" %>
  <div id="<%= dom_id printer %>" class="block" data-printer-card>
  <% else %>
    <div id="<%= dom_id printer %>">
    <% end %>
    <div class="my-4 justify-items-end">
      <h1 class="w-fit text-center text-3xl font-bold sm:text-left" data-printer-name>
        <%= printer.name %>
        <% if has_color(printer.driver.model) %>
          <div class="rainbow outline outline-1 dark:outline-white outline-black"></div>
        <% else %>
          <div class="blckwht outline outline-1 dark:outline-white outline-black"></div>
        <% end %>
      </h1>
    </div>
    <div class="my-4 grid grid-cols-2">
      <div>
        <p class="mb-1 block text-xl font-bold">Modelo:</p>
        <p data-printer-model><%= printer.driver.model %></p>
      </div>
      <div>
        <p class="mb-1 block text-xl font-bold">Serial:</p>
        <p data-printer-serial><%= printer.serial %></p>
      </div>
    </div>
    <div class="mt-5 grid grid-cols-2">
      <p class="mb-1 block text-xl font-bold">Dirección IP:</p>
      <p class="mb-1 block text-xl font-bold">Controlador:</p>
    </div>
    <div class="mb-5 flex w-full items-stretch rounded-md text-center shadow-sm" role="group">
      <% if in_range(printer.ip) %>
      <a href="http://<%= printer.ip %>" target="_blank" class="flex w-1/2 items-center justify-center rounded-l-md bg-purple-400 py-2 px-4 text-sm font-medium text-white hover:bg-purple-500 focus:z-10 focus:ring-2 focus:ring-purple-300 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900">
        <svg class="mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>
          <p><%= printer.ip %></p>
      <% else %>
      <a href="http://<%= printer.ip %>" data-tooltip-target="tooltip-default" target="_blank" class="flex w-1/2 items-center justify-center rounded-l-md bg-purple-400 py-2 px-4 text-sm font-medium text-white hover:bg-purple-500 focus:z-10 focus:ring-2 focus:ring-purple-300 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900">
        <svg class="mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>
        <p class="underline decoration-red-600 decoration-4"><%= printer.ip %></p>
        <div id="tooltip-default" role="tooltip" class="inline-block absolute invisible z-10 py-2 px-3 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm opacity-0 transition-opacity duration-300 tooltip dark:bg-gray-700">
          Dirección IP de la imperesora fuera del rango
          <div class="tooltip-arrow" data-popper-arrow></div>
        </div>
      <% end %>
      </a>
      <a href="<%= printer.driver.link %>" target="_blank" class="flex w-1/2 items-center justify-center rounded-r-md bg-green-700 py-2 px-4 text-sm font-medium text-white hover:bg-green-800 focus:z-10 focus:ring-2 focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-900">
        <svg class="mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path></svg>
        <p>Descargar</p>
      </a>
    </div>
    <% if action_name != "show" %>
      <div class="flex w-full items-stretch rounded-md text-center shadow-sm" role="group">
        <%= link_to printer, type: "button", class: "flex w-1/3 items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-l-md bg-yellow-400 hover:bg-yellow-500 focus:z-10 focus:ring-2 focus:ring-yellow-300 dark:focus:ring-yellow-900" do %>
          <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path></svg>
          <p>Ver</p>
        <% end %>
        <%= link_to edit_printer_path(printer), type: "button", class: "flex w-1/3 items-center justify-center py-2 px-4 text-white text-sm font-medium bg-blue-700 hover:bg-blue-800 focus:z-10 focus:ring-2 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900" do %>
          <svg class="mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
          <p>Editar</p>
        <% end %>
        <%= link_to printer_path(printer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, type: "button", class: "flex w-1/3 items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-r-md bg-red-700 hover:bg-red-800 focus:z-10 focus:ring-2 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" do %>
          <svg class="mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
          <p>Eliminar</p>
        <% end %>
      </div>
      <hr class="mt-6">
    <% end %>
  </div>
