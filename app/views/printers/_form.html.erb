<%= form_with(model: printer, class: "contents") do |form| %>
  <% if printer.errors.any? %>
    <div id="error_explanation" class="mt-3 rounded-lg bg-red-50 px-3 py-2 font-medium text-red-500">
      <h2><%= pluralize(printer.errors.count, "error") %> prohibited this printer from being saved:</h2>
      <ul>
        <% printer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-4">
    <p>Nombre</p>
    <%= form.text_field :name, class: "block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500", placeholder: "Nombre. Ejemplo (CLC 1er Piso)" %>
  </div>
  <div class="my-4 grid-flow-row grid-cols-2 gap-4 md:grid">
    <div class="my-4 md:my-0">
      <p>Modelo</p>
      <%= form.collection_select :model, Driver.order('drivers.id ASC'), :model, :model, {prompt: "Seleccione un Modelo"}, class: "block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500"%>
    </div>
    <div class="my-4 md:my-0">
      <p>Serial</p>
      <%= form.text_field :serial, class: "block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500", placeholder: "Serial. Ejemplo (AAAAAAAAAAA)" %>
    </div>
    <div class="my-4 md:my-0">
      <p>Direcci√≥n IP</p>
      <%= form.text_field :ip, class: "block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500", placeholder: "IP. Ejemplo (000.000.000.000)" %>
    </div>
    <div class="my-4 md:my-0">
      <p>Controlador</p>
      <%= form.text_field :driver, class: "block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-blue-500 dark:focus:ring-blue-500", placeholder: "URL (https://...)" %>
    </div>
  </div>
  <div class="flex items-stretch w-full rounded-md shadow-sm text-center" role="group">
    <%= link_to @printer, type: "button", class: "flex w-1/3 items-center justify-center rounded-l-md bg-yellow-400 py-2 px-4 text-sm font-medium text-white hover:bg-yellow-500 focus:z-10 focus:ring-2 focus:ring-yellow-300 dark:focus:ring-yellow-900" do %>
      <svg class="mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path></svg>
      <p>Volver</p>
    <% end %>
    <%= button_tag(type: "submit", class: "flex w-1/3 items-center justify-center bg-blue-700 py-2 px-4 text-sm font-medium text-white hover:bg-blue-800 focus:z-10 focus:ring-2 focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900") do %>
      <svg class="mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
      <p>Aceptar</p>
    <% end %>
    <%= link_to printers_path, type: "button", class: "flex w-1/3 items-center justify-center rounded-r-md bg-red-700 py-2 px-4 text-sm font-medium text-white hover:bg-red-800 focus:z-10 focus:ring-2 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" do %>
      <svg class="mr-2 h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
      <p>Cancelar</p>
    <% end %>
  </div>
<% end %>
