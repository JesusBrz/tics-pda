<div class="mx-auto md:w-3/4 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @printer %>

    <div class="flex items-stretch w-full rounded-md shadow-sm text-center" role="group">
      <%= link_to edit_printer_path(@printer), type: "button", class: "flex-1 flex items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-l-md bg-green-700 hover:bg-green-800 focus:z-10 focus:ring-2 focus:ring-green-300 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-900" do %>
        <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path></svg>
        <p>Editar</p>
      <% end %>
    
      <%= link_to printer_path(@printer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, type: "button", class: "flex-1 flex items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-none bg-red-700 hover:bg-red-800 focus:z-10 focus:ring-2 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" do %>
        <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        <p>Eliminar</p>
      <% end %>

      <%= link_to printers_path, type: "button", class: "flex-1 flex items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-r-md bg-yellow-700 hover:bg-yellow-800 focus:z-10 focus:ring-2 focus:ring-yellow-300 dark:bg-yellow-600 dark:hover:bg-yellow-700 dark:focus:ring-yellow-900" do %>
        <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path></svg>
        <p>Volver</p>
      <% end %>
    </div>
  </div>
</div>
