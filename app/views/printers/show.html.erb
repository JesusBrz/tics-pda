<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @printer %>
    <%= link_to 'Edit this printer', edit_printer_path(@printer), class: "mt-2 rounded-lg py-3 px-5 bg-gray-800 inline-block font-medium" %>
    <%= button_to 'Destroy this printer', printer_path(@printer), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-800 font-medium" %>
    <%= link_to printer_path(@printer), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, type: "button", class: "flex-1 flex items-center justify-center py-2 px-4 text-white text-sm font-medium rounded-r-md bg-red-700 hover:bg-red-800 focus:z-10 focus:ring-2 focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" do %>
        <svg class="mr-2 w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
        <p>Eliminar</p>
    <%= link_to 'Back to printers', printers_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-800 inline-block font-medium" %>
  </div>
</div>
